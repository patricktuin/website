<div class="container">
  <div class="page-header">
    <h1>Gasten</h1>
  </div>
</div>


	<div class='row'>
		<div class='col-sm-4'>
			<table class="table table-striped">
			<th>Naam</th>
			<th>Aanwezig <span class="glyphicon glyphicon-info-sign"></span></th>
			<% @guests.each do |guest| %>
				<tr>
					<td><a href="#"> <%= guest.name %> </a></td>
					<td>
					<% if guest.attend == true %>
						<% btn_color = "btn btn-success" %>
						<% btn_color_dif = "btn btn-default"%>
						<% attending = "Ja"%>
						<% attending_dif = "Nee" %>
					<% else %>
						<% btn_color = "btn btn-warning" %>
						<% btn_color_dif = "btn btn-warning "%>
						<% attending = "Nee"%>
						<% attending_dif = "Ja" %>
					<% end %>
					<!-- Split button -->
					<div class="btn-group">
					  <button type="button" class="<%= btn_color %> dropdown-toggle" data-toggle="dropdown"><%= attending %>
					    <span class="caret"></span>
		
					  </button>
					  <ul class="dropdown-menu" role="menu">
					    <li><a href="/pages/wedding/location"><%= attending_dif %></a></li>
					  </ul>
					</div>
					</td>
				</tr>
			<% end %>
			</table>
		</div>
	</div>






	

