<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @recipe.name %>
</p>

<p>
  <strong>Recipe type:</strong>
  <%= @recipe.recipe_type %>
</p>

<p>
  <strong>Description:</strong>
  <%= @recipe.description %>
</p>

<p>
  <strong>Img url:</strong>
  <%= @recipe.img_url %>
</p>

<p>
  <strong>Preparation:</strong>
  <%= @recipe.preparation %>
</p>

<h2>Ingredients</h2>
<% @recipe.ingredients.each do |ingredient| %>
  <p>
    <%= ingredient.ingredient.capitalize %>  <%= ingredient.amount %> <%= ingredient.unit %>
  </p>


<% end %>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>



